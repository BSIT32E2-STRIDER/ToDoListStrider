@using ToDoListStrider.Domain
@model ToDoListStrider.Models.DashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        .dashboard-title {
            color: #007bff;
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .dashboard-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #555;
        }

        .task-item {
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .task-item h3 {
                margin: 0 0 10px;
                color: #333;
            }

            .task-item p {
                margin: 0;
                color: #666;
            }

            .task-item .btn {
                padding: 8px 16px;
                border-radius: 5px;
                cursor: pointer;
                background-color: #007bff;
                color: #fff;
                border: none;
                transition: background-color 0.3s;
            }

                .task-item .btn:hover {
                    background-color: #0056b3;
                }

        .empty-message {
            text-align: center;
            color: #777;
        }

        .add-task-section {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .add-task-section form input[type="text"],
            .add-task-section form input[type="date"] {
                width: calc(100% - 120px);
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                outline: none;
            }
